{
	"manifest_version": 2,
	"name": "DGG Injector",
	"version": "0.2",
	
	"icons": {
		"128": "icons/icon.png"
	},
	"description": "Inserts destiny.gg/embed/chat into specified twitch channels. PepeLaugh on, my friends.",
	"permissions": ["https://twitch.tv/*", "storage", "tabs"],
	"browser_action": {
		"default_icon": "icons/icon.png",
		"default_popup": "popup/popup.html",
		"default_title": "DGG Injector",
		"persistent": true
	},
	"content_scripts": [
		{
			"matches": ["https://www.twitch.tv/*"],
			"js": ["lib/customFunctions.js", "main.js"],
			"css": ["styles/styles.css"]
		}
	],
	"background":{
		"scripts": ["background.js"]
	},

	"web_accessible_resources": [
		"styles/styles.css",
		"icons/swapicon.png"
	]
}